[Unit]
Description=Sentinel Input Service (Hardware Monitoring & UDP Multicast)
After=network.target

[Service]
Type=simple
User=seithigal-youtube
WorkingDirectory=/home/seithigal-youtube/media_stream/backend
ExecStart=/usr/bin/python3 services/input/main.py
Restart=always
RestartSec=3
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
